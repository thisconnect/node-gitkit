{
  "name": "nodegit-kit",
  "description": "Complementary NodeGit helpers returning native Promises, helps with git commands such as init, add, commit, status, diff",
  "version": "0.16.0",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/thisconnect/nodegit-kit.git"
  },
  "keywords": [
    "promise",
    "commit",
    "log",
    "status",
    "diff",
    "repo",
    "repository",
    "libgit2",
    "nodegit",
    "git"
  ],
  "scripts": {
    "pretest": "npm run clean",
    "test": "tape ./test/*.js | tap-spec",
    "precoverage": "npm run clean",
    "coverage": "nyc --reporter=lcov tape ./test/*.js",
    "precoveralls": "npm run clean",
    "coveralls": "nyc --reporter=text-lcov tape ./test/*.js | coveralls",
    "clean": "rimraf test/repos && mkdir test/repos"
  },
  "dependencies": {
    "debug": "^2.6.3",
    "fildes": "^1.0.5",
    "nodegit": "^0.18.0"
  },
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^2.13.0",
    "fildes-extra": "^0.6.0",
    "nyc": "^10.2.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  }
}
